@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ARVenture Login</title>
    <link rel="stylesheet" href="~/css/login.css">
    <script src="~/js/Login/login.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>


</head>
<body>
    <div class="login-container">
        <div class="login-box">
            <div class="login-header">
                <h1>Welcome to ARVenture</h1>
                <p>Your portal to the augmented world</p>
            </div>
            <div class="login-form">
                <div class="input-group">
                    <label for="username">Username</label>
                    <input type="text" id="username" name="username" required>
                </div>
                <div class="input-group">
                    <label for="password">Password</label>
                    <input type="password" id="password" name="password" required>
                </div>
                <button id="Loginbtn" class="login-button" onclick="LoginUser()">Login</button>
            </div>
            <div class="login-footer">
                <p><a href="#">Forgot Password?</a></p>
                <p>Don't have an account? <a href="@Url.Action("Signup", "Login")">Sign up</a></p>
            </div>
        </div>
    </div>

</body>

</html>
